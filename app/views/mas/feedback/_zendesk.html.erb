<% content_for header do %>
  <%= stylesheet_link_tag 'zenbox', media: :all %>
<% end %>

<%= javascript_include_tag 'zenbox' %>

<script type="text/javascript">
  if (typeof(Zenbox) !== "undefined") {
    Zenbox.init({
      dropboxID:   "<%= config[I18n.locale][:id] %>",
      url:         "<%= config[I18n.locale][:url] %>",
      tabColor:    "#008000",
      tabTooltip:  "Feedback",
      tabPosition: "Right",
      hide_tab:    "true"
    });
  }
</script>
