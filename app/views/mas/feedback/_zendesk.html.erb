<%= javascript_include_tag 'zenbox' %>
<script type="text/javascript">
  if (typeof(Zenbox) !== "undefined") {
    Zenbox.init({
      dropboxID:   "<%= config[I18n.locale].zendesk_id %>",
      url:         "<%= config[I18n.locale].zendesk_url %>",
      tabColor:    "#008000",
      tabTooltip:  "Feedback",
      tabPosition: "Right",
      hide_tab: "true"
    });
  }
</script>